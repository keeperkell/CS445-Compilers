## C-S22
## testing static variables

bool runningSum;

int sum(bool init; int x)  begin 
    static int runningSum;

    if init then  runningSum <- 0;
    else runningSum += x;

    return runningSum;
 end 

main()
 begin 
    sum(true, 666);
    sum(false, 777);
    output(sum(false, 0));
    sum(false, 888);
    output(sum(false, 0));
    outnl();
 end 
